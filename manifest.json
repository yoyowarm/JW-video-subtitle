{
    "manifest_version": 2,
  
    "name": "JW TV subtitle download",
    "description": "This extension allows the user to download the subtitle on JW TV.",
    "version": "1.3",

    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "browser_action": {
      "default_icon": "logo.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "debugger",
      "webRequest",
      "webRequestBlocking"
    ]
  }