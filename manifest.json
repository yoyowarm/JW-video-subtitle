{
    "manifest_version": 2,
  
    "name": "JW Video subtitle download",
    "description": "This extension allows user to download the subtitle on jw.org library.",
    "version": "2.1.2",

    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "browser_action": {
      "default_icon": "logo.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "permissions": [
      "storage",
      "tabs",
      "https://*/*",
      "http://*/*",
      "webRequest"
    ]
  }